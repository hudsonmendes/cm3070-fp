    "version": "0.2.0",
    "configurations": [
        {
            "name": "etl",
            "type": "python",
            "request": "launch",
            "module": "hlm12erc",
            "console": "integratedTerminal",
            "args": [
                "etl",
                "kaggle",
                "--owner", "zaber666",
                "--dataset", "meld-dataset",
                "--subdir", "MELD-RAW/MELD.Raw",
                "--dest", "./data",
                "--force", "False"
            ],
            "justMyCode": true
        },
        {
            "name": "train",
            "type": "python",
            "request": "launch",
            "module": "hlm12erc",
            "console": "integratedTerminal",
            "args": [
                "erc",
                "train",
                "--config", "./configs/mock.yml",
                "--train_dataset", "./data/sample.csv",
                "--valid_dataset", "./data/sample.csv",
                "--n_epochs", "3",
                "--batch_size", "7",
                "--out", "./target",
            ],
            "env": {
                "WANDB_PROJECT": "hlm12erc_local",
                "WANDB_MODE": "offline"
            },
            "justMyCode": true
        },
    ]
}
